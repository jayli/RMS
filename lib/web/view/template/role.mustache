<div class="row">
<div class="span5">
<ul>
{{#roles}}
<li><a href="/role/edit/{{id}}">{{name}}</a></li>
{{/roles}}
</ul>
</div>
<div class="span11">
<form action="/role/edit" class="roleeditor">
  <div class="clearfix">
    <input class="span2" id="rolename" name="rolename" size="30" type="text" placeholder="用户分组" value="{{rolename}}">
    <input type="submit" class="btn primary" value="添加 或 更新">
  </div>
  <textarea class="users" name="users" placeholder="输入用户名，用逗号分割">{{users}}</textarea>
</form>
</div>
</div>
