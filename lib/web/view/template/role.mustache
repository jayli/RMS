<div class="row">
<div class="span5">
<ul>
{{#roles}}
<li><a href="/role/edit/{{id}}">{{name}}</a></li>
{{/roles}}
</ul>
</div>
<div class="span11 roleeditor">
<form action="/role/edit">
  <div class="clearfix">
    <input class="span2" id="rolename" name="rolename" size="30" type="text" placeholder="用户分组" value="{{rolename}}">
    <input type="submit" class="btn primary" value="{{^roleid}}添加{{/roleid}}{{#roleid}}更新{{/roleid}}">
  </div>
</form>
<ul>
{{#users}}
<li><a href="/role/edit/{{roleid}}/removeuser?userid={{id}}">{{name}}</a></li>
{{/users}}
</ul>
{{#rolename}}
<form action="/role/edit/{{roleid}}/adduser" class="adduser">
  <div class="clearfix">
    <input type="hidden" name="roleid" value="{{roleid}}">
    <input class="span2" name="username" size="30" type="text" placeholder="用户" value="">
    <input type="submit" class="btn primary" value="添加">
  </div>
</form>
{{/rolename}}
</div>
</div>
