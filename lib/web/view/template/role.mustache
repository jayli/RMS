<div class="row">
<div class="span3">
<ul>
{{#roles}}
<li>
  <h4><a href="/role/edit/{{id}}">{{name}}</a></h4>
  <a href="/role/del/{{id}}">删除</a>
</li>
{{/roles}}
</ul>
</div>
<div class="span13 roleeditor">
<form action="/role/new/{{roleid}}">
  <div class="clearfix">
    <input class="span2" id="rolename" name="rolename" size="30" type="text" placeholder="用户分组" value="{{rolename}}" required>
    <input type="submit" class="btn primary" value="{{^roleid}}添加{{/roleid}}{{#roleid}}更新{{/roleid}}">
  </div>
</form>
<ul>
{{#users}}
<li><a href="/role/edit/{{roleid}}/removeuser?userid={{id}}">{{name}}</a></li>
{{/users}}
</ul>
{{#rolename}}
<form action="/role/edit/{{roleid}}/adduser" class="adduser">
  <div class="clearfix">
    <input type="hidden" name="roleid" value="{{roleid}}">
    <input class="span2" name="username" size="30" type="text" placeholder="用户" value="" required>
    <input type="submit" class="btn primary" value="添加">
  </div>
</form>
{{/rolename}}
</div>
</div>
