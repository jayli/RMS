<!doctype html>
<html>
  <head>
    <meta charset="utf8" />
    <title>RMS{{#title}} - {{title}}{{/title}}</title>
    <link href="/assets/css/rms.less" rel="stylesheet/less"/>
    <link rel="shortcut icon" href="http://a.tbcdn.cn/app/tms/favicon.ico" type="image/x-icon" />
  </head>
  <body style="opacity: 0">
    <div class="topbar"> 
      <div class="fill"> 
        <div class="container"> 
          <a class="brand" href="/">RMS<sup>dev</sup></a> 
          <ul class="nav {{apptype-href}}"> 
          {{#apps}}
          <li class="{{href}}"><a href="/{{href}}">{{name}}</a></li> 
          {{/apps}}
          </ul> 
          {{#user}}
          <ul class="nav user"> 
            {{#isroot}}
            <li{{#role}} class="active"{{/role}}>
              <a href="/role">权限配置</a>
            </li>
            {{/isroot}}
            {{#isadmin}}
            {{#detail}}
            <li><a href="/{{apptype-href}}/{{app-name}}/admin">应用配置</a></li>
            {{/detail}}
            {{/isadmin}}
            <li class="dropdown">
              <a href="/user/{{name}}" class="dropdown-toggle">{{name}}</a>
              <ul class="dropdown-menu">
                <li><a href="http://login.taobao.com/member/logout.jhtml?f=top">退出</a></li>
              </ul>
            </li>
          </ul> 
          {{/user}}
        </div> 
      </div> 
    </div>
    <div class="container">
      <div class="app-title page-header">
        <h2>
          <a href="/{{apptype-href}}">{{apptype-name}}</a> / 
          <a href="/{{apptype-href}}/{{app-name}}">{{app-name}}</a>
        </h2>
      </div>
