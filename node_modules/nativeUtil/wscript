import Options
from os import unlink, symlink, popen
from os.path import exists 
import platform, string

pf = '%s' % string.lower(platform.system())

def set_options(opt):
  opt.tool_options('compiler_cxx')

def configure(conf):
  conf.check_tool('compiler_cxx')
  conf.check_tool('node_addon')

def build(bld):
  global pf
  obj = bld.new_task_gen('cxx', 'shlib', 'node_addon')
  obj.cxxflags = ['-g', '-D_FILE_OFFSET_BITS=64', '-D_LARGEFILE_SOURCE', '-Wall']
  obj.target = 'nativeUtil.%s' % pf
  obj.source = 'nativeUtil.cc'

# copy from here
# https://github.com/waveto/node-compress/blob/master/wscript#L26
def shutdown():
  # HACK to get compress.node out of build directory.
  # better way to do this?
  target = 'nativeUtil.%s.node' % pf
  if Options.commands['clean']:
    if exists(target): unlink(target)
  else:
    if exists('build/default/%s' % target) and not exists(target):
      symlink('build/default/%s' % target, target)
